# MTA Flood Risk API Configuration

# Debug mode (set to true for development)
DEBUG=false

# MTA Station Data
MTA_STATIONS_URL=http://web.mta.info/developers/data/nyct/subway/Stations.csv
STATIONS_CACHE_PATH=app/data/stations.csv

# NOAA MRMS Configuration
MRMS_BUCKET=noaa-mrms-pds
MRMS_REGION=us-east-1
MRMS_HTTP_BASE_URL=https://mrms.ncep.noaa.gov/2D

# NOAA Tides Configuration
NOAA_TIDES_BASE_URL=https://api.tidesandcurrents.noaa.gov/api/prod/datagetter
NOAA_BATTERY_STATION=8518750
NOAA_KINGS_POINT_STATION=8516945

# NOAA/NCEI CDO (GHCN-Daily)
NCEI_CDO_BASE_URL=https://www.ncei.noaa.gov/cdo-web/api/v2/data
NCEI_CDO_TOKEN=
GHCND_CENTRAL_PARK_STATION=GHCND:USW00094728
GHCND_JFK_STATION=GHCND:USW00094789
GHCND_LGA_STATION=GHCND:USW00014732

# NWS API
NWS_BASE_URL=https://api.weather.gov

# USGS Water Data
USGS_WATER_URL=https://waterservices.usgs.gov/nwis/iv/
USGS_SITES=01302050,01311145,01311143

# Risk Thresholds - Subway (Underground)
SUBWAY_HIGH_PRECIP_RATE=0.5
SUBWAY_HIGH_ACCUM_6HR=2.0
SUBWAY_ATRISK_PRECIP_RATE=0.25
SUBWAY_ATRISK_ACCUM_6HR=1.0

# Risk Thresholds - Open Cut
OPENCUT_HIGH_PRECIP_RATE=0.75
OPENCUT_HIGH_ACCUM_6HR=2.5
OPENCUT_ATRISK_PRECIP_RATE=0.4
OPENCUT_ATRISK_ACCUM_6HR=1.5

# Risk Thresholds - Elevated
ELEVATED_ATRISK_PRECIP_RATE=1.5

# Risk Thresholds - Coastal/Tide
TIDE_HIGH_LEVEL=5.0
COASTAL_HIGH_PRECIP_RATE=0.3
COASTAL_ATRISK_PRECIP_RATE=0.15

# Default Thresholds
DEFAULT_HIGH_PRECIP_RATE=0.75
DEFAULT_HIGH_ACCUM_6HR=2.5
